<controls:MetroWindow x:Class="AnimeXdcc.Wpf.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:local="clr-namespace:AnimeXdcc.Wpf"
                      xmlns:download="clr-namespace:AnimeXdcc.Wpf.Download"
                      xmlns:search="clr-namespace:AnimeXdcc.Wpf.Search"
                      Title="AnimeXdcc"
                      Height="600" Width="400"
                      ResizeMode="NoResize"
                      TitleCaps="False"
                      GlowBrush="Black"
                      BorderThickness="0">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type search:EpisodeSearchViewModel}">
            <search:EpisodeSearchView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type search:EpisodeSearchResultsViewModel}">
            <search:EpisodeSearchResultsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type download:DownloadEpisodeViewModel}">
            <download:DownloadEpisodeView />
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="MainContent">
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</controls:MetroWindow>