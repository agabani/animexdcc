<controls:MetroWindow x:Class="AnimeXdcc.Wpf.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:local="clr-namespace:AnimeXdcc.Wpf"
                      xmlns:search="clr-namespace:AnimeXdcc.Wpf.Search"
                      Title="AnimeXdcc" Height="350" Width="525" TitleCaps="False"
                      GlowBrush="{StaticResource AccentColorBrush}">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type search:EpisodeSearchViewModel}">
            <search:EpisodeSearchView />
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="MainContent">
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</controls:MetroWindow>